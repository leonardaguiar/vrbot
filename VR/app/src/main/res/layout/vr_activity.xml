<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:screenOrientation="landscape"
    tools:context="br.edu.ifba.vrrobot.VRActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Conectar"
        android:id="@+id/conexao"
        android:src="@drawable/ic_conexao_black_24dp"
        android:background="#ffffff"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Configuracao"
        android:id="@+id/configuracao"
        android:src="@drawable/ic_configuracao_black_24dp"
        android:background="#ffffff"
        android:layout_below="@+id/text_conectar"
        android:layout_alignLeft="@+id/conexao"
        android:layout_alignStart="@+id/conexao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Conectar"
        android:id="@+id/text_conectar"
        android:layout_below="@+id/conexao"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Configuração"
        android:id="@+id/text_configuracao"
        android:layout_below="@+id/configuracao"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>
</RelativeLayout>
