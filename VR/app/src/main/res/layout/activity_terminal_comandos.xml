<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="br.edu.ifba.vrrobot.TerminalComandoActivity">

    <ImageButton
        android:id="@+id/btn_envia_shutdown"
        android:layout_width="112dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="26dp"
        android:adjustViewBounds="true"
        android:background="#ffffff"
        android:contentDescription="TODO"
        android:onClick="ShutdownButton"
        app:srcCompat="@drawable/ic_action_shutdown"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="66dp" />

    <ImageButton
        android:id="@+id/btn_envia_reboot"
        android:layout_width="104dp"
        android:layout_height="93dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="146dp"
        android:layout_toEndOf="@+id/textView9"
        android:background="#ffffff"
        android:contentDescription="TODO"
        android:onClick="RebootButton"
        app:srcCompat="@drawable/ic_action_reboot"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="194dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="336dp"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="361dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="122dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:text="Terminal:"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="329dp" />

    <Button
        android:id="@+id/btn_envia_comando"
        android:layout_width="338dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#000000"
        android:text="Enviar"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="476dp" />

</RelativeLayout>